{% extends "@Core/1-column-layout.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Login</h1>

                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username, {'label': 'Username', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="{{ path('eccube_core_index_index') }}" class="btn btn-primary"> Home </a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}